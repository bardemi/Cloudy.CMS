@using Cloudy.CMS.ContentSupport
@using Cloudy.CMS.EntitySupport.PrimaryKey
@using Cloudy.CMS.UI.List
@model ListColumnViewModel

@inject IPrimaryKeyGetter PrimaryKeyGetter

@{
    var editLink = Url.Page("/Edit", new { area = "Admin", ContentType = Model.ContentType.Name, keys = PrimaryKeyGetter.Get(Model.Instance) });
}

@if (Model.ContentType.IsImageable)
{
    <img class="list-image-in-name" src="@(((IImageable)Model.Instance).Image)" alt="" />
}

<a href="@editLink">@Model.Value</a>