@using Cloudy.CMS.UI.FieldTypes.MediaPicker
@using Cloudy.CMS.UI.FormSupport
@using System.Text.Json

@model FieldViewModel

@{
    var settings = new {
        Provider = Model.Property.Attributes.OfType<MediaPickerAttribute>().First().Provider,
    };
}

<div class="media-picker-control" settings="@(JsonSerializer.Serialize(settings, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase }))"></div>